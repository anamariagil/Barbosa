<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/h"
        android:textColor="@color/black"
        android:textSize="30sp"
        android:textStyle="italic"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="40dp"/>

    <ImageView
        android:id="@+id/h1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/h1"
        app:layout_constraintHeight_percent="0.2"
        app:layout_constraintWidth_percent="0.49"
        app:layout_constraintTop_toBottomOf="@id/text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.014"
        android:layout_marginTop="30dp"/>

    <ImageView
        android:id="@+id/h2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/h2"
        app:layout_constraintHeight_percent="0.2"
        app:layout_constraintWidth_percent="0.49"
        app:layout_constraintTop_toBottomOf="@id/text"
        app:layout_constraintStart_toEndOf="@id/h1"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="30dp"/>

    <ImageView
        android:id="@+id/h3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/h3"
        app:layout_constraintHeight_percent="0.2"
        app:layout_constraintWidth_percent="0.49"
        app:layout_constraintTop_toBottomOf="@id/h1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.014"/>

    <ImageView
        android:id="@+id/h4"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/h4"
        app:layout_constraintHeight_percent="0.2"
        app:layout_constraintWidth_percent="0.49"
        app:layout_constraintTop_toBottomOf="@id/h2"
        app:layout_constraintStart_toEndOf="@id/h3"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ImageView
        android:id="@+id/h5"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/h5"
        app:layout_constraintHeight_percent="0.2"
        app:layout_constraintWidth_percent="0.49"
        app:layout_constraintTop_toBottomOf="@id/h3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.014"/>

    <ImageView
        android:id="@+id/h6"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/h6"
        app:layout_constraintHeight_percent="0.2"
        app:layout_constraintWidth_percent="0.49"
        app:layout_constraintTop_toBottomOf="@id/h4"
        app:layout_constraintStart_toEndOf="@id/h5"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>